<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок для экрана подписки -->
        <TextView
            android:id="@+id/subscriptionStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Статус подписки"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp" />

        <!-- Switch для управления подпиской -->
        <Switch
            android:id="@+id/subscriptionSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Активировать подписку"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Заголовок формы -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите данные товара"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Поля ввода -->
        <EditText
            android:textColor="@color/white"
            android:id="@+id/priceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Цена товара"
            android:inputType="numberDecimal"
            android:textColorHint="#cccccc"
            android:layout_marginBottom="12dp" />

        <EditText
            android:textColor="@color/white"
            android:id="@+id/ratingInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Рейтинг товара"
            android:inputType="numberDecimal"
            android:textColorHint="#cccccc"
            android:layout_marginBottom="12dp" />



        <EditText
            android:textColor="@color/white"
            android:id="@+id/votesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Количество оценок"
            android:inputType="number"
            android:textColorHint="#cccccc"
            android:layout_marginBottom="20dp" />

        <!-- Кнопка предсказания -->
        <Button
            android:id="@+id/predictButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Предсказать"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Результат предсказания -->
        <TextView
            android:id="@+id/predictionResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
